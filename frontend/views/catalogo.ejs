<link rel="stylesheet" href="/css/catalogo/catalogo.css" />

<%- include("partials/headerMenu") %>

<h1 class="titulo">CAT√ÅLOGO</h1>

<section class="catalogo">
  <% caes.forEach(caozinho => { %>
  <div class="card-wrapper">
    <div class="<%= caozinho.status ? 'adotado' : '' %>">
      <div
        class="card"
        onclick="<%= admin || caozinho.status  ? '' : `location.assign('/formulario/${caozinho.id_cao}')` %>"
      >
        <img src="/uploads/caes/fotos/<%= caozinho.path_fotos %>" />
        <p>
          <%= caozinho.nome %> | <%= caozinho.idade %><br /><%= caozinho.sexo %>
        </p>
      </div>
    </div>

    <% if (admin) { %>
    <button
      class="btn-editar"
      onclick="location.assign('/registarCao/<%= caozinho.id_cao %>')"
    >
      EDITAR
    </button>
    <% } %>
  </div>
  <% }) %>
</section>

<%- include("partials/footer") %>
